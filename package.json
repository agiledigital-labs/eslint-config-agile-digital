  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-typed-fp": "^5.0.0",
    "eslint-plugin-functional": "^5.0.6",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.18.0",
    "eslint-plugin-spellcheck": "^0.0.20",
    "eslint-plugin-total-functions": "^7.0.5",
    "typescript": "^5.0.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-agile-digital": "^3.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-typed-fp": "^5.0.0",
    "eslint-plugin-functional": "^5.0.6",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.18.0",
    "eslint-plugin-spellcheck": "^0.0.20",
    "eslint-plugin-total-functions": "^7.0.5",
    "jest": "^29.5.0",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "ts-jest": "^29.0.5",
    "type-coverage": "^2.25.0",
    "typescript": "^5.0.2"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives",
    "test-base": "eslint ./test-fixtures/base.ts --report-unused-disable-directives --config index.js --no-eslintrc",
    "test-react": "eslint ./test-fixtures/react.tsx --report-unused-disable-directives --config react.js --no-eslintrc",
    "test-base-react": "eslint ./test-fixtures/base-react.tsx --report-unused-disable-directives --config base-react.js --no-eslintrc",
    "test": "$npm_execpath run test-base && $npm_execpath run test-react && $npm_execpath run test-base-react",
    "release": "yarn build && yarn test && yarn lint && yarn type-coverage && yarn publish"
  },
  "typeCoverage": {
    "atLeast": 100,
    "strict": true,
    "detail": true
  },
  "engines": {
    "node": ">=16.10.0"
  }
}
