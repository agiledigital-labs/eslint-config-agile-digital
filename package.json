{
  "name": "@agiledigital/eslint-config",
  "version": "4.2.0",
  "type": "module",
  "description": "Agile Digital's standard ESLint config",
  "repository": "https://github.com/agiledigital-labs/eslint-config-agile-digital.git",
  "license": "MIT",
  "author": "Daniel Nixon <dan.nixon@gmail.com>",
  "scripts": {
    "build": "tsc",
    "lint": "eslint index.mts",
    "release": "yarn build && yarn test && yarn lint && yarn type-coverage && yarn publish",
    "test": "$npm_execpath run test-base && $npm_execpath run test-base-react && $npm_execpath run test-react",
    "test-base": "eslint ./test-fixtures/base.ts --report-unused-disable-directives --config index.mjs --no-config-lookup",
    "test-base-react": "eslint ./test-fixtures/base-react.tsx --report-unused-disable-directives --config base-react.mjs --no-config-lookup",
    "test-react": "eslint ./test-fixtures/react.tsx --report-unused-disable-directives --config react.mjs --no-config-lookup"
  },
  "devDependencies": {
    "@agiledigital/eslint-config": "^4.2.0",
    "@eslint/compat": "^1.1.0",
    "@eslint/eslintrc": "^3.1.0",
    "@types/eslint__eslintrc": "^2.1.1",
    "@types/eslint__js": "^8.42.3",
    "@types/react": "^18.3.3",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-filename-rules": "^1.3.1",
    "eslint-plugin-functional": "^6.6.0",
    "eslint-plugin-import-x": "^0.5.3",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-jsdoc": "^48.5.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-no-secrets": "^1.0.2",
    "eslint-plugin-prefer-arrow-functions": "^3.3.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^1.0.3",
    "eslint-plugin-tsdoc": "^0.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "prettier-plugin-packagejson": "^2.5.0",
    "react": "^18.3.1",
    "ts-jest": "^29.1.5",
    "type-coverage": "^2.29.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "eslint-config-prettier": ">=9.0.0",
    "eslint-plugin-filename-rules": ">=1.3.1",
    "eslint-plugin-functional": ">=6.6.0",
    "eslint-plugin-jest": ">=28.0.0",
    "eslint-plugin-jsdoc": ">=48.0.0",
    "eslint-plugin-jsx-a11y": ">=6.7.0",
    "eslint-plugin-no-secrets": ">=1.0.0",
    "eslint-plugin-prefer-arrow-functions": ">=3.1.4",
    "eslint-plugin-prettier": ">=5.0.0",
    "eslint-plugin-react": ">=7.33.0",
    "eslint-plugin-react-hooks": ">=4.6.0",
    "eslint-plugin-react-refresh": ">=0.3.4",
    "eslint-plugin-simple-import-sort": ">=12.0.0",
    "eslint-plugin-sonarjs": ">=1.0.0",
    "eslint-plugin-tsdoc": ">=0.2.17",
    "typescript": "^5.0.0",
    "typescript-eslint": "^7.15.0"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "typeCoverage": {
    "atLeast": 100,
    "strict": true,
    "detail": true
  }
}
